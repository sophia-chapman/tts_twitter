<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.text_field :name, placeholder: "Your Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :username, placeholder: "Choose a @username", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :email, placeholder: "Your email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.text_field :password, placeholder: "Password", class: "form-control" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.text_field :password_confirmation, placeholder: "Password confirmation", class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= f.text_area :bio, placeholder: "Tell us about yourself...", class: "form-control" %>
  </div>

  <div class="form-group">
    <strong>Upload a Profile Pic:</strong>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
